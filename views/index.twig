<!DOCTYPE html>
<html>
  <head>
    <script type="text/javascript" src="/js/jquery-1.6.1.min.js"></script>

    <link href="/css/layout.css" rel="stylesheet" type="text/css" />

    <script type="text/javascript">
      $(document).ready(function() {
        
        var activeRow = 0;
        var maxRows = $('li.row').length;
        
        $(document).keyup(function(event) {
          
          //handle key events
          switch( event.keyCode ){
            //up
            case 38:
              activeRow--;
              if( activeRow < 1){
                activeRow = maxRows;
              }
              break;
            //down
            case 40:
              activeRow++;
              if( activeRow > maxRows ){
                activeRow = 1;
              }
              break;
          
          }
          
          if( event.keyCode == 38 || event.keyCode == 40 ){
            
            $('li.row').removeClass('active');
            $('li.row_'+activeRow).addClass('active');

            var msg = { 0: '', 1: '', 2: '' };
            var cmd = null;
            var count = 0;
            
            $('li.row.active li').each( function(){
              
                    cmd = $(this).attr('data-weef-active');
                    count++;
                    if( count <= 8){
                            msg[0] += cmd;
                    }
                    if( count > 8 && count <= 16 ){
                            msg[1] += cmd;
                    }
                    if( count > 16 ){
                            msg[2] += cmd;
                    }
              
            });
            
            $('img.loader').show();
            $.ajax({
              type : 'POST',
              url : '/send',
              data : { 
                      'msg[0]' : msg[0],
                      'msg[1]' : msg[1],
                      'msg[2]' : msg[2] 
                    },
              success : function(){ $('img.loader').hide(); }
            });
            

          }
            
        });

      });
    </script>

    <title>w33f</title>
  </head>
  <body>
    <div class="theWrap">
    
      <img src="/images/ajax-loader.gif" class="loader" />
      
      
      <form action="/" enctype="multipart/form-data" method="post">
        <input type="file" name="wif_file" />
        <input type="submit" value="import" />
        
      </form>

      <h1>
        "{{ filename }}"
      </h1>

      <div class="pattern">

        <ul class="pattern">
        {% for key, row in pattern %}
          <li class="row row_{{ key }}" data-weef-row="{{ key }}">
            <ul class="shafts">
            {% for key, shaft in row %}
              <li class="shaft{% if shaft %} active{% endif %}" data-weef-active="{% if shaft %}1{% else %}0{% endif %}" data-weef-shaft="{{ key }}"></li>
            {% endfor %}
            </ul>
          </li>
        {% endfor %}
        </ul>

        <div class="clearer"></div>

      </div>

    </div>
  </body>
</html>